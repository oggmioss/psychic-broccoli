<GameView>:
    result_label:result_label
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "logo.jpep"
            allow_stretch: True
            keep_ratio: True
            size_hint: None, None
            width: self.parent.width
            height: self.parent.width/self.image_ratio
        BoxLayout:
            orientation: "vertical"
            padding: 100, 30, 100, 30
        Label:
            id: result_label
            text:"Find the number"
            font_size: 60
        TextInput:
            id: answer_input
            size_hint: 1, 0.5
            padding: 20, 20, 20, 20
            font_size: 42
            input_type: "number"
            multiline: False 
        Button:
            text: "Validate"
            size_hint: 1, 0.5
            blod: True
            background_color: "#0065EF"
            on_press: root.check_number()
    